@page "/about"
@using MudBlazor

<div class="orbit-section aos-fade-up">
    <h2 class="orbit-section-title">About Me</h2>

    <div class="orbit-about-grid">
        <div class="orbit-about-img-wrap">
            <div class="orbit-ring"></div>
            <!-- Ambient Glow Behind Image -->
            <div class="orbit-ambient"></div>

            <img src="images/3.jpeg" class="orbit-about-img" />

            <!-- Floating icons -->
            <div class="orbit-icon icon-1">
                <MudIcon Icon="@Icons.Material.Filled.Code" />
            </div>

            <div class="orbit-icon icon-2">
                <MudIcon Icon="@Icons.Material.Filled.Storage" />
            </div>

            <div class="orbit-icon icon-3">
                <MudIcon Icon="@Icons.Material.Filled.Cloud" />
            </div>
        </div>



        <div class="orbit-about-text">
            <h3>Hello, I'm Anna</h3>

            <p>
                A Software Development Engineer focusing on full-stack .NET applications, REST API architecture,
                SQL optimization, and Blazor Server enterprise solutions.
            </p>

            <p>
                With experience across enterprise systems, warehouse automation, points management,
                and multi-module business portals, I enjoy building clean, scalable solutions.
            </p>

            <p>
                I thrive in fast-paced multicultural teams and constantly challenge myself to learn new technologies.
            </p>
        </div>
    </div>
</div>
