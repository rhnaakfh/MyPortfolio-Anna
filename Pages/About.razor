@page "/about"
@using MudBlazor

<section class="orbit-section aos-fade-up">
@*     <h2 class="orbit-section-title">About Me</h2>
 *@
    <div class="orbit-about-grid">

        <!-- Left: Image & Effects -->
        <div class="orbit-about-img-wrap">
            <div class="orbit-ring"></div>
            <div class="orbit-ambient"></div>

            <img src="images/3.jpeg" class="orbit-about-img" alt="Anna profile" />

            <!-- Floating Icons -->
            <div class="orbit-icon icon-1">
                <MudIcon Icon="@Icons.Material.Filled.Code" />
            </div>
            <div class="orbit-icon icon-2">
                <MudIcon Icon="@Icons.Material.Filled.CloudQueue" />
            </div>
            <div class="orbit-icon icon-3">
                <MudIcon Icon="@Icons.Material.Filled.Storage" />
            </div>
        </div>

        <!-- Right: Animated Text -->
        <div class="orbit-about-text">

            <h3 class="orbit-about-heading">Hi, I'm Anna —</h3>
            <h4 class="orbit-about-subhead typing-effect">Software Developer</h4>

            <p>
                I specialize in crafting full-stack applications using .NET, Blazor Server/WebAssembly,
                SQL Server, and Azure integrations. I bridge backend efficiency with beautiful frontend UI.
            </p>

            <p>
                Whether it’s a warehouse slotting system, quota logic, or document generator,
                I bring clean architecture and scalable code to every project.
            </p>

            <p>
                I believe in thoughtful user experiences, seamless data flow,
                and the power of simple design in complex systems.
            </p>

            <div class="orbit-tech-tags">
                <span>.NET</span>
                <span>Blazor</span>
                <span>SQL</span>
                <span>Azure</span>
                <span>PDFSharp</span>
                <span>ExcelJS</span>
            </div>
        </div>

    </div>
</section>
