@page "/"
@using MudBlazor
@inject IJSRuntime JS

<div class="orbit-hero-container">
    <div class="orbit-background-blur"></div>
    <div class="orbit-floating-shape shape-1"></div>
    <div class="orbit-floating-shape shape-2"></div>
    <div class="orbit-floating-shape shape-3"></div>

    <div class="orbit-hero-grid">

        <!-- LEFT TEXT -->
        <div class="orbit-hero-left">
            <h1 class="orbit-hero-title fade-up">
                Hi, I'm <span class="gradient-text">Anna</span>
            </h1>

            <p class="orbit-hero-sub fade-up">
                Software Developer crafting elegant solutions with
                <strong>.NET • Blazor • SQL Optimization • Cloud Architecture</strong>
            </p>

            <div class="orbit-hero-buttons fade-up">
                <MudButton Variant="Variant.Filled"
                           Color="Color.Primary"
                           Href="/projects"
                           Class="orbit-cta">
                    <MudIcon Icon="@Icons.Material.Filled.RocketLaunch" Class="me-2" />
                    View My Projects
                </MudButton>


                <MudButton Variant="Variant.Outlined"
                           Color="Color.Primary"
                           Href="/about"
                           Class="orbit-cta-alt">
                    About Me
                </MudButton>
            </div>
        </div>

        <!-- RIGHT PROFILE IMAGE -->
        <div class="orbit-hero-right">
            <div class="orbit-image-tilt">
                <div class="orbit-image-frame">
                    <img src="images/3.jpeg" class="orbit-hero-img" />

                    <span class="img-ring ring-1"></span>
                    <span class="img-ring ring-2"></span>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("initOrbitTilt");
            await JS.InvokeVoidAsync("orbitFloatingParallax");
            await JS.InvokeVoidAsync("orbitFadeUp");
        }
    }
}
