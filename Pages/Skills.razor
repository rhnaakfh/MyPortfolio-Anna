@page "/skills"

<div class="orbit-section aos-fade-up">
    <h2 class="orbit-section-title">Technical Skills</h2>
    <p class="orbit-section-subtitle">
        Practical, production-level skills applied across enterprise systems,
        internal platforms, and data-driven workflows.
    </p>

    <div class="orbit-skills-grid">
        @foreach (var skill in SkillList)
        {
            <div class="orbit-skill-card">

                <!-- Skill Title -->
                <h4>@skill.Name</h4>

                <!-- Skill Proficiency -->
                <div class="skill-level @GetSkillLevelClass(skill.Level)">
                    @skill.Level
                </div>

                <!-- Skill Description -->
                <p class="skill-desc">
                    @skill.Description
                </p>

                <!-- Project Mapping -->
                <div class="skill-projects">
                    <span class="used-in-label">Used in:</span>

                    @foreach (var project in skill.UsedInProjects)
                    {
                        <span class="skill-project-tag">
                            @project
                        </span>
                    }
                </div>

            </div>
        }
    </div>
</div>

