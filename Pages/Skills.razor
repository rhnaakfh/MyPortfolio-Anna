@page "/skills"

<div class="orbit-section aos-fade-up">
    <h2 class="orbit-section-title">Technical Skills</h2>
    <p class="orbit-section-subtitle">
        A blend of backend engineering, frontend UI/UX, database optimization, cloud integrations, and modern tooling.
    </p>

    <div class="orbit-skills-grid">

        <div class="orbit-skill-card">
            <div class="skill-icon backend">
                <i class="fa-solid fa-server"></i>
            </div>
            <h4>Backend Development</h4>
            <p>C#, .NET, ASP.NET Core, REST APIs</p>
        </div>

        <div class="orbit-skill-card">
            <div class="skill-icon frontend">
                <i class="fa-solid fa-code"></i>
            </div>
            <h4>Frontend Development</h4>
            <p>Blazor, HTML, CSS, JavaScript, Bootstrap</p>
        </div>

        <div class="orbit-skill-card">
            <div class="skill-icon database">
                <i class="fa-solid fa-database"></i>
            </div>
            <h4>Database Engineering</h4>
            <p>SQL Server, Stored Procedures, Query Optimization</p>
        </div>

        <div class="orbit-skill-card">
            <div class="skill-icon cloud">
                <i class="fa-solid fa-cloud"></i>
            </div>
            <h4>Cloud & Integrations</h4>
            <p>Azure Blob Storage, Email Services, FilePond Uploads</p>
        </div>

        <div class="orbit-skill-card">
            <div class="skill-icon report">
                <i class="fa-solid fa-file-lines"></i>
            </div>
            <h4>Reports & Documents</h4>
            <p>PDFSharp, iTextSharp, ExcelJS</p>
        </div>

        <div class="orbit-skill-card">
            <div class="skill-icon tools">
                <i class="fa-solid fa-toolbox"></i>
            </div>
            <h4>Tools & Workflow</h4>
            <p>Visual Studio, Git/GitHub, Postman, Swagger</p>
        </div>

    </div>
</div>
